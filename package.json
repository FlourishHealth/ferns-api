{
  "name": "ferns-api",
  "version": "0.51.0",
  "description": "Styled after the Django & Django REST Framework, a batteries-include framework for building REST APIs with Node/Express/Mongoose.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "lint": "eslint \"src/**/*.ts*\"",
    "lintfix": "eslint --fix \"src/**/*.ts*\"",
    "test": "jest -i",
    "updateSnapshot": "jest --updateSnapshot",
    "docs": "typedoc --out docs src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/FlourishHealth/ferns-api.git"
  },
  "keywords": [
    "rest",
    "api",
    "mongoose",
    "express"
  ],
  "author": "Josh Gachnang",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/FlourishHealth/ferns/issues"
  },
  "homepage": "https://github.com/FlourishHealth/ferns#readme",
  "dependencies": {
    "@sentry/node": "^10.5.0",
    "@sentry/profiling-node": "^10.5.0",
    "@wesleytodd/openapi": "^1.1.0",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "cron": "^4.1.0",
    "expo-server-sdk": "^3.14.0",
    "express": "^5.1.0",
    "generaterr": "^1.5.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "luxon": "^3.5.0",
    "mongoose-to-swagger": "^1.4.0",
    "ms": "^2.1.3",
    "on-finished": "^2.3.0",
    "passport": "^0.7.0",
    "passport-anonymous": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^8.0.0",
    "scmp": "^2.1.0",
    "winston": "^3.17.0"
  },
  "peerDependencies": {
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/chai": "^5.0.1",
    "@types/chai-as-promised": "^8.0.2",
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.4.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.15",
    "@types/node": "^24.2.1",
    "@types/on-finished": "^2.3.4",
    "@types/passport": "^1.0.17",
    "@types/passport-anonymous": "^1.0.5",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-comment-length": "^2.1.1",
    "eslint-plugin-ferns": "^0.4.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-lodash": "^8.0.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-native": "^5.0.0",
    "eslint-plugin-react-perf": "^3.3.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "4.1.4",
    "jest": "^30.0.5",
    "mongoose": "^8.10.1",
    "prettier": "^3.5.2",
    "sinon": "^21.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "typedoc": "~0.28.10",
    "typescript": "5.9.2"
  },
  "resolutions": {
    "json5": "2.2.3"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": false,
    "printWidth": 100,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "useTabs": false
  },
  "eslintConfig": {
    "extends": [
      "plugin:ferns/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "tsconfigRootDir": "./",
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off"
    }
  }
}
